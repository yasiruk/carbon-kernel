<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>2</version>
    </parent>

    <groupId>org.wso2.carbon.multitenancy</groupId>
    <artifactId>org.wso2.carbon.multitenancy.parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>WSO2 Carbon Multi-Tenancy - Parent</name>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon.multitenancy</groupId>
                <artifactId>org.wso2.carbon.context.api</artifactId>
                <version>${carbon.multitenancy.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon.multitenancy</groupId>
                <artifactId>org.wso2.carbon.context.api.feature</artifactId>
                <version>${carbon.multitenancy.version}</version>
                <type>zip</type>
            </dependency>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>${osgi.api.version}</version>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>${testng.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>components/org.wso2.carbon.context.api</module>
        <module>features/org.wso2.carbon.context.api.feature</module>
        <module>distribution</module>
    </modules>

    <properties>
        <carbon.multitenancy.version>1.0.0-SNAPSHOT</carbon.multitenancy.version>
        <carbon.feature.plugin.version>2.0.0</carbon.feature.plugin.version>
        <carbon.kernel.version>5.0.0</carbon.kernel.version>
        <osgi.api.version>6.0.0</osgi.api.version>

        <osgi.framework.package.import.version.range>[1.8.0, 2.0.0)</osgi.framework.package.import.version.range>
        <testng.version>6.9.4</testng.version>


        <carbon.context.api.version>5.0.0</carbon.context.api.version>
        <wso2.maven.compiler.source>1.8</wso2.maven.compiler.source>
        <wso2.maven.compiler.target>1.8</wso2.maven.compiler.target>
        <maven.checkstyle.plugin.version>2.17</maven.checkstyle.plugin.version>
        <maven.findbugs.plugin.version>3.0.3</maven.findbugs.plugin.version>
    </properties>

</project>