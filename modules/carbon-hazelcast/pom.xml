            <dependency>
                <groupId>org.ops4j.pax.exam</groupId>
                <artifactId>pax-exam-testng</artifactId>
                <version>${pax.exam.testng.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ops4j.pax.exam</groupId>
                <artifactId>pax-exam-link-mvn</artifactId>
                <version>${pax.exam.link.mvn.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ops4j.pax.url</groupId>
                <artifactId>pax-url-aether</artifactId>
                <version>${pax.url.aether.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jacoco</groupId>
                <artifactId>org.jacoco.ant</artifactId>
                <version>${org.jacoco.ant.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>component</module>
        <module>feature</module>
        <module>distribution</module>
        <module>samples/HazelcastMapSample</module>
    </modules>

    <properties>
        <org.wso2.carbon.hazelcast.version>1.0.0</org.wso2.carbon.hazelcast.version>

        <carbon.kernel.version>5.0.0</carbon.kernel.version>
        <osgi.core.api.version>6.0.0</osgi.core.api.version>
        <equinox.osgi.services.version>3.4.0.v20140312-2051</equinox.osgi.services.version>
        <slf4j.api.version>1.7.12</slf4j.api.version>
        <hazelcast.version>3.6</hazelcast.version>
